{
    "codeLens.enable": true,

    "diagnostic.errorSign": "✘",
    "diagnostic.warningSign": "",
    "diagnostic.infoSign": "",
    "diagnostic.hintSign": "",
    // "diagnostic.hintSign": "",
    // "diagnostic.hintSign": "",
    // "diagnostic.hintSign": "",
    "diagnostic.enableSign": true,
    "diagnostic.enable": true,
    "diagnostic.showUnused": true,
    "diagnostic.signPriority": 1000,
    "diagnostic.refreshOnInsertMode": true,

	"list.source.symbols.defaultOptions": [
        "--interactive", 
        "--number-select", 
        "--auto-preview"
    ],
	"list.source.outline.defaultOptions": [
        "--interactive", 
        "--number-select", 
        "--auto-preview"
    ],

    "coc.preferences.extensionUpdateCheck": "daily",
    "coc.preferences.colorSupport": true,
    "coc.preferences.formatOnSaveFiletypes": ["python"],
    "coc.preferences.bracketEnterImprove": true,
    "coc.preferences.enableFloatHighlight": true,
    "coc.preferences.semanticTokensHighlights": true,
    "coc.preferences.formatOnType": false,
    "coc.preferences.enableMessageDialog": true,
    "coc.preferences.currentFunctionSymbolAutoUpdate": true,
    "coc.preferences.useQuickfixForLocations": false, 
    "coc.source.around.firstMatch": false,
    "coc.source.buffer.firstMatch": false,

    // "codeLens.enable": true,

    // "clojure.initialization-options.dependency-scheme": "jar",
    // "clojure.initialization-options.ignore-classpath-directories": true,
    // "clojure.initialization-options.semantic-tokens?": true,
    // "clojure.initialization-options.text-document-sync-kind": ":full",
    // "clojure.initialization-options.use-metadata-for-privacy?": false,
    // "clojure.startup-message": true,
    // "clojure.trace.server": "verbose",

    "languageserver": {
        "clojure-lsp": {
            "command": "zsh",
            "args": ["-c", "clojure-lsp"],
            "filetypes": ["clojure"],
            "rootPatterns": ["project.clj", "deps.edn", "shadow-cljs.edn"],
            "additionalSchemes": ["jar", "zipfile"],
            "startup-message": true,
            "trace.server": "verbose",
            "initializationOptions": {
                "ignore-classpath-directories": true,
                "dependency-scheme": "jar",
                "semantic-tokens?": true,
                "text-document-sync-kind": ":full",
                "use-metadata-for-privacy?": false,
                "lint-project-files-after-startup?": true,
                "keep-require-at-start?": true,
                "cljfmt": {
                    "split-keypairs-over-multiple-lines?": true,
                    "identation?":                         true,
                    "remove-surrounding-whitespace?":      true,
                    "remove-trailing-whitespace?":         true,
                    "insert-missing-whitespace?":          true,
                    "remove-consecutive-blank-lines?":     true,
                    "align-associative?":                  true
                }
            }
        }
    },

    "callHierarchy.splitCommand": "bel 10sp",

    "suggest.enablePreview": true,
    "suggest.maxCompleteItemCount": 15,
    "suggest.removeDuplicateItems": true,
    "suggest.snippetIndicator": "->",
    "suggest.completionItemKindLabels": {
        "class": " פּ ",
        "color": "  ",
        "constant": "  ",
        "constructor": "  ",
        "enum": " 練",
        "enumMember": "  ",
        "event": "  ",
        "field": "  ",
        "file": "  ",
        "folder": " ﱮ ",
        "function": "  ",
        "interface": " 蘒",
        "keyword": "  ",
        "method": "  ",
        "module": "  ",
        "operator": "  ",
        "property": "  ",
        "reference": "  ",
        "snippet": "  ",
        "struct": "  ",
        "text": "  ",
        "typeParameter": "<>",
        "unit": " 塞 ",
        "value": "  ",
        "variable": "[]"
    },

    "python.venvPath": "~/.virtualenvs",
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": ["-S", "-l", "79"],
    "python.linting.pydocstyleEnabled": true,

    "git.addGBlameToVirtualText": true,
    "git.virtualTextPrefix": "• ",

    "tailwindCSS.jsLanguages": [
        "javascript",
        "javascriptreact",
        "reason",
        "typescriptreact",
        "clojure"
    ],

    "html.format.contentUnformatted": "pre,code,textarea,h1,h2,h3,span,p"
}
