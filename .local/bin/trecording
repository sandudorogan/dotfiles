#!/bin/env zsh

mkdir -p "$HOME/Videos/recordings"
filename="$HOME/Videos/recordings/recording_$(date +%y-%m-%d_%H-%M).mp4"

if [ -z "$(pgrep ffmpeg)" ]; then 
    ffmpeg \
        -y \
        -f x11grab \
        -video_size cif \
        -framerate 30 \
        -s 1920x1080 \
        -i $DISPLAY+0 \
        -c:v libx264 \
        "$filename" && xclip -selection clipboard -t video/mp4 "$filename"
else
    pkill ffmpeg
fi
        # -i $DISPLAY+1920,0 \
