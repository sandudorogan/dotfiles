{
  "hooks": [
    {
      "event": "stop",
      "command": "CLAUDE_PEON_DIR=~/.cursor/hooks/peon-ping bash ~/.claude/hooks/peon-ping/adapters/cursor.sh stop"
    },
    {
      "event": "beforeShellExecution",
      "command": "CLAUDE_PEON_DIR=~/.cursor/hooks/peon-ping bash ~/.claude/hooks/peon-ping/adapters/cursor.sh beforeShellExecution"
    }
  ]
}
