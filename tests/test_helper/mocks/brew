#!/usr/bin/env bash
echo "brew $*" >> "$MOCK_CALLS_FILE"

case "$1" in
    --prefix)
        echo "/opt/homebrew"
        ;;
    shellenv)
        echo "export PATH=/opt/homebrew/bin:\$PATH"
        ;;
    bundle)
        exit 0
        ;;
    update)
        exit 0
        ;;
    *)
        exit 0
        ;;
esac
