{{- $osid := .chezmoi.os -}}
{{- $is_ubuntu := false -}}
{{- $is_arch := false -}}
{{- if eq .chezmoi.os "darwin" -}}
{{-   $osid = "macos" -}}
{{- else if eq .chezmoi.os "linux" -}}
{{-   if hasKey .chezmoi "osRelease" -}}
{{-     if eq .chezmoi.osRelease.id "ubuntu" -}}
{{-       $osid = "ubuntu" -}}
{{-       $is_ubuntu = true -}}
{{-     else if eq .chezmoi.osRelease.id "arch" -}}
{{-       $osid = "arch" -}}
{{-       $is_arch = true -}}
{{-     end -}}
{{-   end -}}
{{- end -}}

[data]
    osid = "{{ $osid }}"
    hostname = "{{ .chezmoi.hostname }}"
    email = "sandu.dorogan@gmail.com"
    name = "Sandu Dorogan"
{{- if eq .chezmoi.os "darwin" }}
    is_macos = true
    is_linux = false
    is_ubuntu = false
    is_arch = false
{{- else }}
    is_macos = false
    is_linux = true
    is_ubuntu = {{ $is_ubuntu }}
    is_arch = {{ $is_arch }}
{{- end }}

[diff]
    pager = "delta"

[edit]
    command = "nvim"
